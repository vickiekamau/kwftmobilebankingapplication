<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".activity.Home.Home">

   <ImageView
       android:id="@+id/logo"
       android:layout_width="wrap_content"
       android:layout_height="100dp"
       android:src="@drawable/kwftlogo"
       android:layout_gravity="center"
       android:layout_marginLeft="80dp"/>


            <ImageView
                android:id="@+id/ic_account"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circlebackgroundpurple"
                android:src="@drawable/ic_account"
                android:padding="1dp"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="50dp"/>
            <TextView
                android:id="@+id/ic_txt_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Account"
                android:layout_below="@+id/ic_account"
                android:layout_marginLeft="55dp"/>
            <ImageView
                android:id="@+id/ic_balance"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circlebackgroundpink"
                android:src="@drawable/ic_withdraw"
                android:padding="10dp"
                android:layout_below="@+id/logo"
                android:layout_toRightOf="@+id/ic_account"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:id="@+id/ic_txt_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Balance"
                android:layout_below="@+id/ic_balance"
                android:layout_toRightOf="@+id/ic_txt_account"
                android:layout_marginLeft="60dp"/>

            <ImageView
                android:id="@+id/ic_transfer"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circlebackgroundyellow"
                android:src="@drawable/ic_balance"
                android:padding="1dp"
                android:layout_toRightOf="@+id/ic_balance"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:id="@+id/ic_txt_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Transfer Funds"
                android:layout_below="@+id/ic_balance"
                android:layout_toRightOf="@+id/ic_txt_balance"
                android:layout_marginLeft="40dp"/>

                  <ImageView
                      android:id="@+id/ic_mpesa"
                      android:layout_width="64dp"
                      android:layout_height="64dp"
                      android:background="@drawable/circlebackgroundgreen"
                      android:src="@drawable/mpesa"
                      android:padding="1dp"
                      android:layout_below="@+id/ic_txt_account"
                      android:layout_marginLeft="50dp"
                      android:layout_marginTop="30dp"/>
                  <TextView
                      android:id="@+id/ic_txt_mpesa"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:layout_marginTop="10dp"
                      android:text="Send To Mpesa"
                      android:layout_below="@+id/ic_mpesa"
                      android:layout_marginLeft="40dp"/>
   </RelativeLayout>
